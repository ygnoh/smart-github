{
    "manifest_version": 2,
    "name": "SmartGithub",
    "version": "1.0",

    "description": "Make your github repo smarter.",

    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/default.png"
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "webNavigation",
        "storage"
    ],

    "author": "yonggoo.noh@gmail.com",
    "homepage_url": "https://github.com/ygnoh/smart-github"
}